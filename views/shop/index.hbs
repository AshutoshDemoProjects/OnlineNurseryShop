<div class="col-md-3 offset-md-9">
  <form class="form-inline" action="/" method="POST">
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="Search" name="plantName" aria-label="Search"
        aria-describedby="button-addon2">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i
            class="fas fa-search"></i></button>
      </div>
    </div>
  </form>
</div>
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-succcess" {{#if noMessage}}hidden{{/if}}>
      {{ successMsg }}
    </div>

  </div>
</div>

<div class="row">
  {{#each list}}
  <div class="col-md-3">
    <div class="card">
      <a href="/plant/show/{{this._id}}"><img class="card-img-top rounded-circle"
          src="/public/uploads/{{this.imagePath}}" alt="{{this.name}}"></a>
      <div class="card-body text-center">
        <h4 class="card-title text-capitalize">{{this.name}}</h4>
        <p class="card-text">Price : &#8377; {{this.price}}</p>
        <a href="/add-to-cart/{{this._id}}" class="btn btn-success" role="button">Add To Chart</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>