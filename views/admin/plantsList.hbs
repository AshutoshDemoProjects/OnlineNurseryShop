<div class="col-md-3 offset-md-9">
  <form class="form-inline" action="/admin/plant/search" method="POST">
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="Search" name="plantName" aria-label="Search"
        aria-describedby="button-addon2">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i
            class="fas fa-search"></i></button>
      </div>
    </div>
  </form>
</div>
<div class="row">
  {{#each list}}
  <div class="col-md-3">
    <div class="card" style="margin: 1%">
      <a href="/admin/plant/show/{{this._id}}"><img class="card-img-top rounded-circle"
          src="/public/uploads/{{this.imagePath}}" alt="{{this.name}}"></a>
      <div class="card-body text-center">
        <h4 class="card-title text-capitalize">{{this.name}}</h4>
        <p class="card-text">Price : &#8377; {{this.price}}</p>
        <a href="/admin/plant/{{this._id}}" class="btn btn-primary"><i class="fa fa-edit fa-lg" aria-hidden="true"></i>
          Edit</a>
        <a href="/admin/plant/delete/{{this._id}}" class="btn btn-danger"
          onclick="return confirm('Are you sure to delete this record?');"><i class="fa fa-trash fa-lg"
            aria-hidden="true"></i> Delete</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>